<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Year</th>
    <th>Month</th>
    <th>Day</th>
    <th>Time</th>
    <th>Champion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.location %></td>
    <td><%= event.year %></td>
    <td><%= event.month %></td>
    <td><%= event.day %></td>
    <td><%= event.time %></td>
    <td><%= event.champion %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

